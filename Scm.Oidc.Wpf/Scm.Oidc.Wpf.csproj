<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <RootNamespace>Com.Scm</RootNamespace>
    <StartupObject>Com.Scm.Oidc.Wpf.App</StartupObject>
    <ApplicationIcon>oidc.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="oidc.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="oidc.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HandyControl" Version="3.5.1" />
    <PackageReference Include="MahApps.Metro.IconPacks.Material" Version="5.1.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Serilog.Sinks.File" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Scm.Oidc.Client\Scm.Oidc.Client.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Scm.Common.Log">
      <HintPath>..\..\..\Scm\libs\netstandard2.0\Scm.Common.Log.dll</HintPath>
    </Reference>
    <Reference Include="Scm.Common.Text">
      <HintPath>..\..\..\Scm\libs\netstandard2.0\Scm.Common.Text.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="oidc.png" />
  </ItemGroup>

</Project>
